  },
  "dependencies": {
    "next": "14.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "@prisma/client": "5.13.0"
  },
  "devDependencies": {
    "prisma": "5.13.0",
    "typescript": "5.2.2",
    "tailwindcss": "3.4.18",
    "postcss": "8.4.24",
    "autoprefixer": "10.4.14",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0"
  }
}
