generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Usuario {
  id                  Int           @id @default(autoincrement())
  nombre              String
  email               String        @unique
  tipo                String
  alojamientos        Listing[]
  studentReservations Reservation[] @relation("studentReservations")
  sentMessages        Message[]
}

model Listing {
  id           Int           @id @default(autoincrement())
  titulo       String
  descripcion  String
  precio       Float
  universidad  String
  tipo         String
  verificado   Boolean       @default(false)
  imagen       String?
  usuarioId    Int
  usuario      Usuario       @relation(fields: [usuarioId], references: [id])
  createdAt    DateTime      @default(now())
  reservations Reservation[]
}

model Reservation {
  id        Int       @id @default(autoincrement())
  listingId Int
  listing   Listing   @relation(fields: [listingId], references: [id])
  studentId Int
  student   Usuario   @relation("studentReservations", fields: [studentId], references: [id])
  status    String    @default("pending")
  startDate DateTime?
  endDate   DateTime?
  createdAt DateTime  @default(now())
  messages  Message[]
}

model Message {
  id            Int         @id @default(autoincrement())
  reservationId Int
  reservation   Reservation @relation(fields: [reservationId], references: [id])
  senderId      Int
  sender        Usuario     @relation(fields: [senderId], references: [id])
  content       String
  createdAt     DateTime    @default(now())
}
